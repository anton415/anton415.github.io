---
import { profile } from '../data/profile';
import { navLinks, socialLinks } from '../data/links';

const { title = 'Astro Site' } = Astro.props;
const activeSocialLinks = socialLinks.filter((link) => link.href);
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <style>
      :root {
        color-scheme: light;
        --ink: #1d1b16;
        --ink-soft: #3f3a31;
        --accent: #c35b2d;
        --bg: #f6f1e7;
        --bg-2: #efe6d6;
      }

      * {
        box-sizing: border-box;
      }

      body {
        margin: 0;
        font-family: "Source Serif 4", "Iowan Old Style", Georgia, serif;
        color: var(--ink);
        background: radial-gradient(circle at top, var(--bg), var(--bg-2));
        min-height: 100vh;
      }

      a {
        color: inherit;
        text-decoration: none;
      }

      header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 2rem clamp(1.5rem, 4vw, 4rem);
      }

      .brand {
        display: flex;
        flex-direction: column;
        gap: 0.2rem;
        font-weight: 600;
        letter-spacing: 0.02em;
      }

      .brand-meta {
        font-weight: 400;
        font-size: 0.85rem;
        color: var(--ink-soft);
      }

      nav {
        display: flex;
        gap: 1rem;
        font-size: 0.95rem;
      }

      nav a {
        padding: 0.25rem 0.75rem;
        border-radius: 999px;
        border: 1px solid transparent;
        transition: border-color 0.2s ease, color 0.2s ease;
      }

      nav a:hover {
        border-color: var(--accent);
        color: var(--accent);
      }

      main {
        padding: 0 clamp(1.5rem, 4vw, 4rem) 4rem;
        max-width: 880px;
      }

      footer {
        padding: 1rem clamp(1.5rem, 4vw, 4rem) 2rem;
        color: var(--ink-soft);
        font-size: 0.85rem;
      }

      .footer-grid {
        display: flex;
        flex-wrap: wrap;
        align-items: flex-start;
        gap: 2rem;
        justify-content: space-between;
      }

      .footer-profile {
        display: flex;
        flex-direction: column;
        gap: 0.35rem;
        min-width: 220px;
      }

      .footer-name {
        font-weight: 600;
        color: var(--ink);
      }

      .footer-links {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem 1rem;
      }

      .footer-links a {
        border-bottom: 1px solid transparent;
        transition: border-color 0.2s ease, color 0.2s ease;
      }

      .footer-links a:hover {
        border-color: var(--accent);
        color: var(--accent);
      }

      .card {
        background: rgba(255, 255, 255, 0.6);
        border: 1px solid rgba(195, 91, 45, 0.15);
        border-radius: 24px;
        padding: 2rem;
        box-shadow: 0 18px 40px rgba(61, 40, 20, 0.08);
      }

      .pill {
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        border-radius: 999px;
        border: 1px solid rgba(61, 40, 20, 0.2);
        padding: 0.35rem 0.9rem;
        font-size: 0.85rem;
        color: var(--ink-soft);
      }

      @media (max-width: 640px) {
        header {
          flex-direction: column;
          align-items: flex-start;
          gap: 1rem;
        }

        nav {
          flex-wrap: wrap;
        }

        .footer-grid {
          flex-direction: column;
          align-items: flex-start;
        }
      }
    </style>
  </head>
  <body>
    <header>
      <div class="brand">
        <span>{profile.name}</span>
        <span class="brand-meta">{profile.headline} · {profile.location}</span>
      </div>
      <nav>
        {navLinks.map((item) => (
          <a href={item.href}>{item.label}</a>
        ))}
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer>
      <div class="footer-grid">
        <div class="footer-profile">
          <span class="footer-name">{profile.name}</span>
          <span>{profile.headline}</span>
          <span>{profile.location}</span>
          {profile.email ? (
            <a href={`mailto:${profile.email}`}>{profile.email}</a>
          ) : null}
        </div>
        <div class="footer-links">
          {activeSocialLinks.map((link) => (
            <a href={link.href} target="_blank" rel="noreferrer">
              {link.label}
            </a>
          ))}
        </div>
        <span>Built with Astro · {new Date().getFullYear()}</span>
      </div>
    </footer>
  </body>
</html>
