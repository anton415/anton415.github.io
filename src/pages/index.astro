---
import BaseLayout from '../layouts/BaseLayout.astro';
import { cv } from '../data/cv';

const { summary, experience, education, skills, projects } = cv;

const formatDate = (value: string) => {
  if (value === 'present') {
    return 'Present';
  }

  const [year, month] = value.split('-');
  if (!month) {
    return year;
  }

  const date = new Date(Number(year), Number(month) - 1, 1);
  return date.toLocaleString('en-US', { month: 'short', year: 'numeric' });
};
---

<BaseLayout title="Home">
  <section class="card hero">
    <p class="pill">CV snapshot</p>
    <h1>Java Developer</h1>
    <ul class="summary-list">
      {summary.map((item) => (
        <li>{item}</li>
      ))}
    </ul>
  </section>

  <section class="cv-grid">
    <article class="card cv-span">
      <h2>Experience</h2>
      <div class="cv-stack">
        {experience.map((item) => (
          <div class="cv-item">
            <div class="cv-item-head">
              <div>
                <h3>{item.role}</h3>
                <p class="cv-meta">
                  {item.company}
                  {item.location ? ` · ${item.location}` : ''}
                </p>
              </div>
              <span class="cv-dates">
                {formatDate(item.start)} — {formatDate(item.end)}
              </span>
            </div>
            <ul>
              {item.highlights.map((highlight) => (
                <li>{highlight}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>
    </article>

    <article class="card">
      <h2>Education</h2>
      <div class="cv-stack">
        {education.map((item) => (
          <div class="cv-item">
            <div class="cv-item-head">
              <div>
                <h3>{item.degree}</h3>
                <p class="cv-meta">{item.field}</p>
                <p class="cv-meta">{item.school}</p>
              </div>
              <span class="cv-dates">{item.year}</span>
            </div>
          </div>
        ))}
      </div>
    </article>

    <article class="card">
      <h2>Skills</h2>
      <div class="cv-section">
        <h3>Core</h3>
        <div class="cv-chips">
          {skills.core.map((item) => (
            <span class="cv-chip">{item}</span>
          ))}
        </div>
      </div>
      <div class="cv-section">
        <h3>Tools</h3>
        <div class="cv-chips">
          {skills.tools.map((item) => (
            <span class="cv-chip">{item}</span>
          ))}
        </div>
      </div>
      <div class="cv-section">
        <h3>Languages</h3>
        <div class="cv-chips">
          {skills.languages.map((item) => (
            <span class="cv-chip">{item}</span>
          ))}
        </div>
      </div>
    </article>

    <article class="card cv-span">
      <h2>Projects</h2>
      <div class="cv-stack">
        {projects.map((project) => (
          <div class="cv-item">
            <div class="cv-item-head">
              <div>
                <h3>{project.name}</h3>
                {project.role ? <p class="cv-meta">{project.role}</p> : null}
              </div>
            </div>
            <p class="cv-body">{project.description}</p>
            {project.tech ? (
              <div class="cv-chips">
                {project.tech.map((item) => (
                  <span class="cv-chip">{item}</span>
                ))}
              </div>
            ) : null}
          </div>
        ))}
      </div>
    </article>
  </section>

  <style>
    .hero h1 {
      margin: 0.6rem 0 1rem;
      font-size: clamp(2rem, 4vw, 2.6rem);
    }

    .summary-list {
      margin: 0;
      padding-left: 1.2rem;
      display: grid;
      gap: 0.4rem;
    }

    .cv-grid {
      display: grid;
      grid-template-columns: repeat(2, minmax(0, 1fr));
      gap: 1.5rem;
      margin-top: 1.5rem;
    }

    .cv-span {
      grid-column: 1 / -1;
    }

    .cv-stack {
      display: grid;
      gap: 1.5rem;
    }

    .cv-item ul {
      margin: 0.75rem 0 0;
      padding-left: 1.2rem;
    }

    .cv-item-head {
      display: flex;
      justify-content: space-between;
      align-items: flex-start;
      gap: 1rem;
      flex-wrap: wrap;
    }

    .cv-item h3 {
      margin: 0;
      font-size: 1.1rem;
    }

    .cv-meta {
      margin: 0.2rem 0 0;
      color: var(--ink-soft);
      font-size: 0.95rem;
    }

    .cv-dates {
      font-size: 0.85rem;
      color: var(--ink-soft);
      white-space: nowrap;
    }

    .cv-body {
      margin: 0.6rem 0 0;
      color: var(--ink-soft);
    }

    .cv-section {
      margin-top: 1rem;
    }

    .cv-section h3 {
      margin: 0;
      font-size: 1rem;
      letter-spacing: 0.02em;
    }

    .cv-chips {
      display: flex;
      flex-wrap: wrap;
      gap: 0.4rem;
      margin-top: 0.5rem;
    }

    .cv-chip {
      border: 1px solid rgba(61, 40, 20, 0.2);
      border-radius: 999px;
      padding: 0.25rem 0.75rem;
      font-size: 0.85rem;
      color: var(--ink-soft);
      background: rgba(255, 255, 255, 0.6);
    }

    @media (max-width: 760px) {
      .cv-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>
</BaseLayout>
