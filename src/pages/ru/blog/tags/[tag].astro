---
import BaseLayout from '../../../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

export async function getStaticPaths() {
  const slugifyTag = (tag: string) =>
    tag
      .toLowerCase()
      .trim()
      .replace(/[^\p{Letter}\p{Number}]+/gu, '-')
      .replace(/(^-|-$)+/g, '');

  const posts = await getCollection('postsRu');
  const visiblePosts = posts.filter((post) => !post.data.draft);
  const tagMap = new Map();

  for (const post of visiblePosts) {
    for (const rawTag of post.data.tags ?? []) {
      const tag = rawTag.trim();
      if (!tag) continue;
      const slug = slugifyTag(tag);
      if (!slug) continue;

      const existing = tagMap.get(slug);
      if (existing) {
        existing.posts.push(post);
      } else {
        tagMap.set(slug, { tag, slug, posts: [post] });
      }
    }
  }

  return Array.from(tagMap.values()).map((entry) => ({
    params: { tag: entry.slug },
    props: {
      tag: entry.tag,
      slug: entry.slug,
      posts: entry.posts.sort(
        (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
      ),
    },
  }));
}

const { tag, posts } = Astro.props;

const formatDate = (date: Date) =>
  date.toLocaleDateString('ru-RU', {
    year: 'numeric',
    month: 'short',
    day: 'numeric',
  });

const getPostLabel = (count: number) => {
  const mod10 = count % 10;
  const mod100 = count % 100;
  if (mod10 === 1 && mod100 !== 11) return 'пост';
  if (mod10 >= 2 && mod10 <= 4 && (mod100 < 12 || mod100 > 14)) {
    return 'поста';
  }

  return 'постов';
};
---

<BaseLayout title={`Тег: ${tag}`} locale="ru">
  <section class="card">
    <div class="head">
      <div>
        <p class="pill">Тег</p>
        <h1>{tag}</h1>
        <p class="meta-summary">
          {posts.length} {getPostLabel(posts.length)}
        </p>
      </div>
      <a class="pill" href="/ru/blog/tags">Все теги</a>
    </div>

    <div class="list">
      {posts.map((post) => (
        <article class="item">
          <div class="meta-row">
            <span class="date">{formatDate(post.data.date)}</span>
            <span class="dot">-</span>
            <span>{post.data.tags.join(', ')}</span>
          </div>
          <h2>
            <a href={`/ru/blog/${post.slug}`}>{post.data.title}</a>
          </h2>
          <p>{post.data.description}</p>
        </article>
      ))}
    </div>
  </section>
</BaseLayout>

<style>
  .head {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: 1.5rem;
  }

  .meta-summary {
    margin: 0.5rem 0 0;
    font-size: 0.85rem;
    color: #5a5041;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .list {
    margin-top: 2rem;
    display: grid;
    gap: 1.75rem;
  }

  .item {
    padding-bottom: 1.5rem;
    border-bottom: 1px solid rgba(195, 91, 45, 0.18);
  }

  .item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .meta-row {
    display: flex;
    gap: 0.5rem;
    align-items: center;
    font-size: 0.85rem;
    color: #5a5041;
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .dot {
    opacity: 0.5;
  }

  h2 {
    margin: 0.5rem 0 0.5rem;
    font-size: 1.4rem;
  }

  a {
    color: inherit;
  }

  @media (max-width: 720px) {
    .head {
      flex-direction: column;
      align-items: flex-start;
    }
  }
</style>
